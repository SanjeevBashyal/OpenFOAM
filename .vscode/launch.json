    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "program": "${env:FOAM_APPBIN}/backgroundMesh",
            "name": "Debug in OpenFOAM",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/run/aggregate/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands":
            [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
